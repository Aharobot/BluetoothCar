<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Parent"/>

    <style name="Parent.Match" parent="Parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Parent.Wrap" parent="Parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FrameLayout"/>

    <style name="FrameLayout.ControlBase" parent="FrameLayout">
        <item name="android:layout_width">@dimen/control_base_size</item>
        <item name="android:layout_height">@dimen/control_base_size</item>
        <item name="android:minWidth">@dimen/control_base_size</item>
        <item name="android:minHeight">@dimen/control_base_size</item>
        <item name="android:layout_margin">@dimen/margin_35dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/control_base</item>
    </style>

    <style name="ImageView"/>

    <style name="ImageView.ControlKnob" parent="ImageView">
        <item name="android:layout_width">@dimen/control_knob_size</item>
        <item name="android:layout_height">@dimen/control_knob_size</item>
        <item name="android:minWidth">@dimen/control_knob_size</item>
        <item name="android:minHeight">@dimen/control_knob_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:src">@drawable/control_knob</item>
    </style>

    <style name="ImageView.ConnectionStatus" parent="ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">@dimen/margin_10dp</item>
        <item name="android:src">@drawable/circle</item>
    </style>

    <style name="Button"/>

    <style name="Button.Control" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_20dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_30dp</item>
        <item name="android:layout_marginRight">@dimen/margin_30dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_20dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TableLayout"/>

    <style name="TableLayout.Controls">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TableRow"/>

    <style name="TableRow.ButtonsRow" parent="TableRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.SubTitle" parent="TextView">
        <item name="android:padding">@dimen/margin_5dp</item>
    </style>

    <style name="TextView.Title" parent="TextView.SubTitle">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RelativeLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RelativeLayout.Parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/margin_10dp</item>
    </style>

</resources>